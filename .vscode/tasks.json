{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "mokabackend:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile.dev",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"volumes": [
					{
					  "containerPath": "/app", "localPath": "${workspaceFolder}"
					}
				],
			},
			"python": {
				"args": [
					"runserver",
					"0.0.0.0:8000",
				],
				"file": "moka/manage.py"
			}
		}
	]
}